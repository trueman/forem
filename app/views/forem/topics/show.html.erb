<% content_for :page_header do %>
  <%= render :partial => 'forem/topics/head', :locals => { :topic => @topic } %>
<% end %>

<div class="row">
  <div class="span12">
    <p>
      <%= link_to forem.forum_path(@topic.forum), class: "btn" do %>
        <i class="icon-chevron-left"></i>&nbsp;&nbsp;&nbsp;<%= @topic.forum.title %>
      <% end %>
      <span class="btn-group">
        <% if @topic.can_be_replied_to? && can?(:reply, @topic) %>
          <%= link_to t(".reply"), forem.new_topic_post_path(@topic), class: "btn" %>
        <% end %>
        <% if @topic.user == forem_user || forem_admin? %>
          <%= link_to t(".delete"), forem.forum_topic_path(@forum, @topic), class: "btn", :method => :delete, :confirm => t("are_you_sure") %>
        <% end %>
        <% if forem_user %>
          <% if !@topic.subscriber?(forem_user.id) %>
            <%= link_to t(".subscribe"), forem.subscribe_forum_topic_path(@forum, @topic), class: "btn" %>
          <% else %>
            <%= link_to t(".unsubscribe"), forem.unsubscribe_forum_topic_path(@forum, @topic), class: "btn" %>
          <% end %>
        <% end %>
      </span>
    </p>
    <div id='topic' class='<%= 'un' unless @topic.locked? %>locked'>
      <p class="btn-group pull-right">
        <% if forem_admin? %>
          <%= link_to t(".hide.#{@topic.hidden}"), forem.toggle_hide_admin_topic_path(@topic), class: "btn", :method => :put %>
          <%= link_to t(".lock.#{@topic.locked}"), forem.toggle_lock_admin_topic_path(@topic), class: "btn", :method => :put %>
          <%= link_to t(".pin.#{@topic.pinned}"), forem.toggle_pin_admin_topic_path(@topic), class: "btn", :method => :put %>
        <% end %>
        <% if forem_admin? %>
          <%= link_to t('forem.topic.links.edit'), forem.edit_admin_topic_path(@topic), class: "btn" %>
        <% end %>
      </p>
      <div class="clearfix"></div>


      <% if @topic.pending_review? %>
        <div class="moderation" id='topic_moderation'>
          <%= t(".pending_review") %>
          <% if forem_admin_or_moderator?(@topic.forum) %>
            <%= form_for @topic, :url => forem.moderate_forum_topic_path(@topic.forum, @topic), :method => :put do |f| %>
              <%= render "forem/moderation/options", :f => f %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <%= forem_pages_widget(@posts) %>

      <div id='posts'>
        <%= render :partial => "forem/posts/post", :collection => @posts %>
      </div>

      <%= forem_pages_widget(@posts) %>
    </div>
  </div>
</div>
